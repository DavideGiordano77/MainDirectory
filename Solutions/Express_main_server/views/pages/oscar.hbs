<section class="oscar-section">
    {{#each groupedAwards}}
        <div class="category-group">
            <h2 class="category-title">{{@key}}</h2> <!-- Nome della categoria -->
            <div class="oscar-results">
                {{#each this}}
                    <div class="oscar-card">
                        <h3>{{film}}</h3>
                        <img src="{{#if posterUrl}}{{posterUrl}}{{else}}/images/default_poster.jpg{{/if}}"
                             alt="Poster di {{film}}" class="movie-poster" data-id="{{filmId}}" />
                        <p><strong>Nome:</strong>
                            <span class="actor-name" data-name="{{name}}">{{name}}</span>
                        </p>
                        <p><strong>Vincitore:</strong> {{#if winner}}✅ Sì{{else}}❌ No{{/if}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    {{else}}
        <p>Nessun risultato trovato.</p>
    {{/each}}
</section>

