<body>
{{> navbar}}

<div class="search-results">
    <h1>Risultati per "{{query}}"</h1>

    {{#if movies.length}}
        <h2>Film trovati:</h2>
        <div class="movies-container">
            {{#each movies}}
                <div class="movie-card">
                    <h2>{{this.title}}</h2>
                    <p>Anno: {{this.year}}</p>
                </div>
            {{/each}}
        </div>
    {{/if}}

    {{#if actors.length}}
        <h2>Attori trovati:</h2>
        <div class="actors-container">
            {{#each actors}}
                <div class="actor-card">
                    <h2>{{this.name}}</h2>
                    <p>Ruolo: {{this.role}}</p>
                </div>
            {{/each}}
        </div>
    {{/if}}

    {{#unless movies.length}}
        {{#unless actors.length}}
            <p>Nessun risultato trovato.</p>
        {{/unless}}
    {{/unless}}
</div>

{{> footer}}
</body>
