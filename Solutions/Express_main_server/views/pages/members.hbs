<section class="members">
<div class="members-container">
    <h1>Critici</h1>

    <!-- Sezione per i Top Critics -->
    <h2>Top Critics</h2>
    <div class="critics-grid">
        {{#each topCritics}}
            <div class="critic-card top-critic">
                <div class="critic-image">
                    <img src="/images/default.jpg" alt="{{this}}">
                </div>
                <a href="/members/{{this}}" class="critic-name">{{this}}</a>
            </div>
        {{/each}}
    </div>

    <!-- Sezione per gli altri Critics -->
    <h2>Altri Critics</h2>
    <div class="critics-grid">
        {{#each allCritics}}
            <div class="critic-card">
                <div class="critic-image">
                    <img src="/images/default.jpg" alt="{{this}}">
                </div>
                <a href="/members/{{this}}" class="critic-name">{{this}}</a>
            </div>
        {{/each}}
    </div>
</div>

</section>
