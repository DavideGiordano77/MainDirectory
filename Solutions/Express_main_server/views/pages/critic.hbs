<section class="critic">
<div class="critic-container">
    <h1>Recensioni di {{criticName}}</h1>

<main>
    {{#if movies.reviews}}
        <ul>
            {{#each movies.reviews}}
                <li>
                    <h3>{{this.movie_title}}</h3>
                    <p><strong>Tipo di recensione:</strong> {{this.review_type}}</p>
                    <p><strong>Punteggio:</strong> {{this.review_score}}</p>
                    <p><strong>Data recensione:</strong> {{this.review_date}}</p>
                    <p><strong>Contenuto recensione:</strong> {{this.review_content}}</p>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>Non sono state trovate recensioni per questo critico.</p>
    {{/if}}
</main>
</div>
</section>
