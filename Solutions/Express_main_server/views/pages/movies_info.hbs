<section class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{movie.posterUrl}}" class="img-fluid rounded-start" alt="{{movie.title}}">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h1 class="card-title">{{movie.title}}</h1>
                            <p class="card-text"><strong>Anno:</strong> {{movie.date}}</p>
                            <p class="card-text"><strong>Tagline:</strong> {{movie.tagline}}</p>
                            <p class="card-text"><strong>Trama:</strong> {{movie.description}}</p>
                            <p class="card-text"><strong>Rating:</strong> {{movie.rating}}</p>
                            <p class="card-text"><strong>Durata:</strong> {{movie.minute}} minuti</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="/" class="btn btn-primary">Torna alla lista</a>
            </div>
        </div>
    </div>
</section>

