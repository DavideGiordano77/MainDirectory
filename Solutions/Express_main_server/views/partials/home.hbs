<section class="home">
    <!-- Carosello -->
    <section id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/eva.jpg" class="d-block w-100" alt="Evangelion 1.0">
            </div>
            <div class="carousel-item">
                <img src="/images/mickey.jpg" class="d-block w-100" alt="Movie 2">
            </div>
            <div class="carousel-item">
                <img src="/images/saltburn.jpg" class="d-block w-100" alt="Movie 3">
            </div>
        </div>

        <!-- Pulsanti di navigazione -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </section>

    <!-- Box per Nuove Uscite -->
    <section class="new-releases mt-5">
        <h2 class="text-center text-white">Our favourites</h2>
        <div class="container">
            <div class="row justify-content-center">
                {{#each movies}}
                    <div class="col-md-2 col-sm-4 col-6 text-center mb-4">
                        <div class="poster-box p-3 border rounded">
                            <a href="/movies/get-all-info/{{this.id}}" class="movie-link">
                                <img src="{{this.posterUrl}}" class="img-fluid" alt="{{this.title}}">
                            </a>
                            <p class="text-white">{{this.title}}</p>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>
</section>

<!-- Includi Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
